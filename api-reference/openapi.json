{
  "openapi": "3.1.0",
  "info": {
    "title": "Krumb API",
    "description": "API for creating short links, viewing stats, and generating QR codes.",
    "version": "1.0.0",
    "license": {
      "name": "MIT"
    }
  },
  "servers": [
    {
      "url": "https://api.krumb.fun"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/api/shorten": {
      "post": {
        "summary": "Create Short URL",
        "description": "Creates a new shortened URL for a given original URL.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "example": "user@example.com" },
                  "password": { "type": "string", "example": "mypassword" },
                  "api_key": { "type": "string", "example": "abc123" },
                  "url": { "type": "string", "example": "https://example.com" }
                },
                "required": ["email", "password", "api_key", "url"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Short URL created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "short_url": { "type": "string" },
                    "tokens_left": { "type": "integer" }
                  }
                }
              }
            }
          },
          "400": { "description": "Missing required fields" },
          "403": { "description": "Authentication failed or out of tokens" }
        }
      }
    },
    "/api/stats/{short_id}": {
      "post": {
        "summary": "Get Link Stats",
        "description": "Retrieve analytics for a specific short link.",
        "parameters": [
          {
            "name": "short_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" },
                  "api_key": { "type": "string" }
                },
                "required": ["email", "password", "api_key"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Stats retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "short_id": { "type": "string" },
                    "original_url": { "type": "string" },
                    "clicks": { "type": "integer" },
                    "created_at": { "type": "string", "format": "date-time" }
                  }
                }
              }
            }
          },
          "404": { "description": "Link not found" },
          "403": { "description": "Authentication failed" }
        }
      }
    },
    "/api/qr/{short_id}": {
      "post": {
        "summary": "Generate QR Code",
        "description": "Generate a QR code PNG for a short link.",
        "parameters": [
          {
            "name": "short_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" },
                  "api_key": { "type": "string" }
                },
                "required": ["email", "password", "api_key"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "PNG QR Code for the short URL",
            "content": {
              "image/png": {}
            }
          },
          "404": { "description": "Link not found" },
          "403": { "description": "Authentication failed" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}
