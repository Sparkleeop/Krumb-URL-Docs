{
  "/api/links": {
    "get": {
      "summary": "List Links",
      "description": "Fetch all links created by the authenticated user.",
      "parameters": [
        {
          "name": "X-Email",
          "in": "header",
          "required": true,
          "schema": { "type": "string" },
          "description": "Your account email"
        },
        {
          "name": "X-Password",
          "in": "header",
          "required": true,
          "schema": { "type": "string" },
          "description": "Your account password"
        },
        {
          "name": "X-Api-Key",
          "in": "header",
          "required": true,
          "schema": { "type": "string" },
          "description": "Your API key"
        }
      ],
      "responses": {
        "200": {
          "description": "List of links retrieved",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": { "type": "boolean" },
                  "links": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "short_id": { "type": "string" },
                        "original_url": { "type": "string" },
                        "clicks": { "type": "integer" },
                        "created_at": { "type": "string", "format": "date-time" }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "400": { "description": "Missing required headers" },
        "403": { "description": "Authentication failed" }
      }
    }
  },
  "/api/link/{short_id}": {
    "delete": {
      "summary": "Delete Link",
      "description": "Delete a specific short link owned by the user.",
      "parameters": [
        {
          "name": "short_id",
          "in": "path",
          "required": true,
          "schema": { "type": "string" }
        },
        {
          "name": "X-Email",
          "in": "header",
          "required": true,
          "schema": { "type": "string" }
        },
        {
          "name": "X-Password",
          "in": "header",
          "required": true,
          "schema": { "type": "string" }
        },
        {
          "name": "X-Api-Key",
          "in": "header",
          "required": true,
          "schema": { "type": "string" }
        }
      ],
      "responses": {
        "200": {
          "description": "Link deleted",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": { "type": "boolean" },
                  "message": { "type": "string" }
                }
              }
            }
          }
        },
        "400": { "description": "Missing required headers" },
        "403": { "description": "Authentication failed" },
        "404": { "description": "Link not found" }
      }
    },
    "put": {
      "summary": "Update Link",
      "description": "Update the destination URL for an existing short link.",
      "parameters": [
        {
          "name": "short_id",
          "in": "path",
          "required": true,
          "schema": { "type": "string" }
        },
        {
          "name": "X-Email",
          "in": "header",
          "required": true,
          "schema": { "type": "string" }
        },
        {
          "name": "X-Password",
          "in": "header",
          "required": true,
          "schema": { "type": "string" }
        },
        {
          "name": "X-Api-Key",
          "in": "header",
          "required": true,
          "schema": { "type": "string" }
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "url": { "type": "string", "example": "https://new-destination.com" }
              },
              "required": ["url"]
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Link updated successfully",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": { "type": "boolean" },
                  "message": { "type": "string" },
                  "short_id": { "type": "string" },
                  "new_url": { "type": "string" }
                }
              }
            }
          }
        },
        "400": { "description": "Missing required headers or URL" },
        "403": { "description": "Authentication failed" },
        "404": { "description": "Link not found" }
      }
    }
  }
}
